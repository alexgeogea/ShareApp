<div class="comment-wrapper clearfix">
	<div class="comment">
		<p><%= comment.content %></p>
		<p class="date"><%= time_ago_in_words(comment.created_at) %> ago by <span><%= comment.user.name %></span></p>
	</div>
	<% if comment.user == current_user %>
		<%= link_to "Delete", [comment.idea, comment], method: :delete, data: { confirm: "Are you sure you want to delete your comment?" } %>
	<% end %>
</div>