<div class="body-wrapper">
  <div class="center">
    <h2>Sign in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email %>
        <%= f.input :password %>
      </div>
      
      <div class="form-actions">
        <%= f.button :submit, "Sign in" %>
      </div>
    <% end %>
  </div>
</div>
